                        android:padding="3dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:background="@drawable/border"/>

                    <TextView
                        android:id="@+id/tvComidaLunes"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:background="@drawable/border"/>

                    <TextView
