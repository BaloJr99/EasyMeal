                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:background="@drawable/border"/>

                    <TextView
                        android:id="@+id/tvAlmuerzoSabado"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:layout_height="match_parent"
